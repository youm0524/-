#include <stdio.h>
#include <string.h>

int main() {
	int length = 0, number = 0;
	int add = 0, score = 0;
	char arr[100] = {0, };

	scanf("%d", &number);

	for (int i = 0; i < number; i++) {
		scanf("%s", arr);

		add = 0;
		score = 0;

		for (int j = 0; j< strlen(arr); j++) {
			if (arr[j] == 'O') {
				add += 1;
				score += add;
			}
			else if (arr[j] == 'X') {
				add = 0;
			}
		}
		printf("%d\n", score);
	}
	return 0;
}

